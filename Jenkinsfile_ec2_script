pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS_USR = credentials('DOCKERHUB_CREDENTIALS_USR')
        DOCKERHUB_CREDENTIALS_PSW = DOCKERHUB_CREDENTIALS_PSW('DB_USER')
        DB_PASSWORD = credentials('DB_PASSWORD')
    }

    stages {
        stage ('connect to ec2-instance') {
            steps {         
            sh 'echo "connection"'
            sh 'pwd'
            sh 'ls -la'
              }
        }
        stage ('adding docker credentials') {
            steps {
                sh '''
                echo 'variable \"docker_user\" {' >> variables.tf
                echo '        type = string' >> variables.tf
                echo '        default     = \"\$DB_PASSWORD\"' >> variables.tf
                echo '}' >> variables.tf
                echo 'variable \"docker_pass\" {' >> variables.tf
                echo '        type = string' >> variables.tf
                echo '        default     = \"\$DB_PASSWORD\"' >> variables.tf
                echo '}' >> variables.tf
                '''
            }
        }
/*   
        stage ('Pull docker image') {
            steps {
                script {
                    sh '''
                        echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                        docker pull andrienkoms/final:latest
                        docker images
                    '''
                }
            }
        }
*/
    }
}