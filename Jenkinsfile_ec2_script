pipeline {
    agent any
    environment {
        DB_NAME = credentials('DB_NAME')
        DB_USER = credentials('DB_USER')
        DB_PASSWORD = credentials('DB_PASSWORD')
    }

    stages {
        stage ('connect to ec2-instance') {
            steps {         
            sh 'echo "connection"'
            sh 'pwd'
            sh 'ls -la'
              }
        }
        stage ('adding docker credentials') {
            steps {
                sh '''
                cat "variable \"docker_user\" {" >> variables.tf
                cat "        type = string" >> variables.tf
                cat "        default     = \"\$DOCKERHUB_CREDENTIALS_USR\"" >> variables.tf
                cat "}" >> variables.tf
                cat "variable \"docker_pass\" {" >> variables.tf
                cat "        type = string" >> variables.tf
                cat "        default     = \"\$DOCKERHUB_CREDENTIALS_PSW\"" >> variables.tf
                cat "}" >> variables.tf
                '''
            }
        }
/*   
        stage ('Pull docker image') {
            steps {
                script {
                    sh '''
                        echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                        docker pull andrienkoms/final:latest
                        docker images
                    '''
                }
            }
        }
*/
    }
}